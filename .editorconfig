root = true

[*]
charset = utf-8
insert_final_newline = true

[*.json]
max_line_length = 100
indent_style = space
indent_size = 2

[*.md]
max_line_length = 100
indent_style = space
indent_size = 2

[*.py]
max_line_length = 100
indent_style = space
indent_size = 4

[*.toml]
max_line_length = 100
indent_style = space
indent_size = 2

[*.yaml]
max_line_length = 100
indent_style = space
indent_size = 2

[Makefile]
indent_size = 8
indent_style = tab
